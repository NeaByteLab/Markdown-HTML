{
  "name": "@neabyte/markdown-html",
  "version": "1.0.0",
  "description": "Markdown to HTML converter with TypeScript types, streaming support, and universal module compatibility",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run type-check && unbuild --minify",
    "dev": "tsc --watch",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "clean": "rm -rf dist && rm -rf .tsbuildinfo",
    "prepublishOnly": "npm run clean && npm run build",
    "type-check": "tsc --noEmit",
    "check-all": "npm run lint && npm run type-check"
  },
  "keywords": [
    "typescript",
    "markdown",
    "html",
    "parser",
    "converter",
    "streaming",
    "universal",
    "browser",
    "nodejs",
    "esm",
    "cjs",
    "ast",
    "xss",
    "security",
    "sanitization",
    "tokenizer",
    "lexer",
    "processor",
    "builder",
    "generator",
    "element",
    "document",
    "segment",
    "emphasis",
    "codeblock",
    "header",
    "list",
    "link",
    "image",
    "blockquote",
    "strikethrough",
    "inline",
    "priority",
    "buffer",
    "chunk",
    "minify",
    "bundle"
  ],
  "author": {
    "name": "NeaByteLab",
    "email": "me@neabyte.com",
    "url": "https://github.com/NeaByteLab"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/NeaByteLab/Markdown-HTML.git"
  },
  "bugs": {
    "url": "https://github.com/NeaByteLab/Markdown-HTML/issues"
  },
  "homepage": "https://github.com/NeaByteLab/Markdown-HTML#readme",
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@types/node": "^24.6.1",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "eslint-plugin-sonarjs": "^3.0.5",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3",
    "unbuild": "^3.6.1"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "publishConfig": {
    "access": "public"
  }
}
